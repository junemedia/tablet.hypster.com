@model hypster.ViewModels.createPlayer_ViewModel
@{
    ViewBag.Title = "Create Free Player | Hypster - free music online - player for tumblr";
    ViewBag.Desc = "Create free playlists, and listen commercial free music.";
}



<script type="text/javascript">
    active_menu = ".mCreate";
    $(".mCreate").css("background-color", "#191919");

    $(document).ready(function () {
        RenderCreatePlayer();
    });
    $(window).resize(function () {
        RenderCreatePlayer();
    });
</script>









<div class="boxContRight boxContRightTop">
    <div id="listenSlide1" class="slideRight" style=" min-height:400px;">


            <div id="CreatePlayerSection1" onclick="window.location='/create/player';">
                <img alt="" src="/imgs/create/create_player_icon_sm.png" /><br />
                Create Player
            </div>


            <div id="CreatePlayerSection2" onclick="window.location='/create/playlist';">
                <img alt="" src="/imgs/create/create_playlist_icon_sm.png" /><br />
                Create Playlist
            </div>


            <div id="CreatePlayerSection3" onclick="window.location='/create/station';">
                <img alt="" src="/imgs/create/create_station_icon_sm.png" /><br />
                Create Station
            </div>




            <div id="CreateContHolder" style=" float:left; width:100%; background-color:#1d1d1c; margin-top:-1px; ">
                @if (ViewBag.Action == "EDT")
                {
                    Html.RenderAction("getPlayer", "player", new { id = ViewBag.PlType });
                }
                else
                {
                    Html.RenderAction("getPlayer", "player", new { id = "" });   
                }
            </div>

    </div>
</div>













<div class="boxContLeft">
    <div id="listenSlide2" class="slideLeft" style=" min-height:450px;">
        
            @Html.Action("PopularVideos", "popular")

    </div>
</div>