<div class="boxContRight">
    <div id="listenSlide1" class="slideRight">
        
        <div style=" float:left; width:1040px; ">
        

            <div class="connectCont">
                

                    <div class="connectInnerCont">
                        @foreach (var item in Model.members_list)
                        {   
                        <div class="connectFriendCont">
                        
                            @if (item.profile_pic_id > Model.New_User_ID)
                            {
                                <img src="http://pics.hypster.com/userpics/@(item.username)/@(item.profile_pic_id)_s.jpg")" alt="" onclick="window.location='/profile/@item.username';" style=" float:left; width:94px; height:94px; margin:4px; margin-left:5px; background-color:#333333; cursor:pointer;" onerror="this.src='/imgs/user_img_nf.png';" />
                            }
                            else
                            {
                                <img src="http://pics.hypster.com/userpics/@(item.profile_pic_id)_s.jpg")" alt="" onclick="window.location='/profile/@item.username';" style=" float:left; width:94px; height:94px; margin:4px; margin-left:5px; background-color:#333333; cursor:pointer;" onerror="this.src='/imgs/user_img_nf.png';" />
                            }

                            <div class="txtHolder">
                                <div>
                                    <span class="style_22">user:</span> @item.username<br />
                                    <span class="style_22">name:</span> @item.name<br />
                                    <span class="style_22">country:</span> @item.country<br/>
                                </div>
                            </div>




                            <div class="ActButtons">
                                @if (User.Identity.Name != item.username)
                                {
                                    using (Html.BeginForm("FollowFriend", "account"))
                                    {
                                        <div class="FollowBtn">
                                            <input type="hidden" id="user_to_follow_id" name="user_to_follow_id" value="@item.id" />
                                            <input type="submit" value="Follow" style=" background:none; border:0px; color:#000000; line-height:15px;"  />
                                        </div>
                                    }
                                }
           
                                <div class="DetailsBtn" onclick="window.location='/profile/@item.username';">Details</div>
                            </div>

                        </div>
                        }
                    </div>



                    <div class="connectPaging">
                        @for (var i = 1; i <= Model.Number_Of_Pages; i++)
                        {
                            <div class="ConnectPage" onclick="window.location='/connect/page/@i';" style=" @if(i == Model.Current_Page){ <text> background-color:#23292b;</text> }">@i</div>
                        }
                    </div>

            </div>




            <div style=" float:left; width:166px; min-height:1800px; "> 
            

