    <div id="listenSlide2" class="slideLeft" style=" min-height:95px; ">
        
            
                <div class="connectHead">
                    
                    <div class="ffHeader">
                        Find Friends
                    </div>
                    
                    <div style=" float:right; width:726px; height:90px; background-color:#59666c; border:3px solid #59666c; border-radius:2px;">
                        <div id="TopAdd19312yw7jdcvbb"></div>
                        <script type="text/javascript">
                            $(document).ready(function () {
                                document.getElementById("TopAdd19312yw7jdcvbb").innerHTML = "<iframe width=\"728\" scrolling=\"no\" height=\"90\" frameborder=\"0\" style=\"border:none;\" marginwidth=\"0\" src=\"http://feed-rt.baronsoffers.com/offer/feed/q/aT0zNTQ4LHM9NzI4eDkwLG49aWZyYW1l?subid=default\"></iframe>";
