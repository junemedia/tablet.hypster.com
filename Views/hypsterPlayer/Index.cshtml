    <!-- this is setting parent variable to current player -->
    <script type="text/javascript">
        function loaded() {
            setTimeout("notifyParrent()", 1000);
        }

        function notifyParrent() {
            window.opener.player_ins = this;
            setTimeout("notifyParrent()", 1000);
        }

        function unloaded() {
            window.opener.player_ins = null;
        }
    </script>

</head>







<body onload="loaded();" onunload="unloaded();" style=" overflow:hidden;">
    <div id="MainContHolder">



        <div class="MainTopCont">
            <div class="MainTopInnr">
            
                <div style=" @if(User.Identity.IsAuthenticated == false){<text>display:none;</text>}">
                        <div id="AddBtn" onclick="AddSong_CLICK()">
                            + Add song to Playlist
                        </div>
                </div>

                
                <div id="SideAd1_d928372wvbnh" style=" float:right;"></div>
                <script type="text/javascript">
                    $(document).ready(function () {
                        document.getElementById("SideAd1_d928372wvbnh").innerHTML = "<iframe  src=\"http://feed-rt.baronsoffers.com/offer/feed/q/aT00NTI0LHM9MjMweDMyLG49aWZyYW1lLGI9NDM5?subid=default\" width=\"230\" height=\"32\" scrolling=\"no\" marginwidth=\"0\" style=\"border:none;\" frameborder=\"0\"></iframe>";
                    });
                </script>
            </div>
        </div>

    



        <div class="MainMidCont">
            <div class="MainMidInnr">
            
          
                <div class="PlayerRoot">
                
                    <div id="HypsterOriginalPlayer"></div>
                    <script type="text/javascript">
                        @switch((string)ViewBag.MEDIA_TYPE)
                        {

                            //--------------------------------------------
                            case "playlist":
                            {
                                <text>
                                var vars = {
                                    mediaType: "playlist",
                                    userID: "@(ViewBag.UserID)",
                                    playlistID: "@(ViewBag.PlaylistID)",
                                    shuffle: "0",
                                    autoplay: "true"
                                };
                                </text>
                            }
                            break;
                        
                            //--------------------------------------------
                            case "radio":
                            {
                                <text>
                                var vars = {
                                    mediaType: "radio",
                                    userID: "0",
                                    radio_station: "@ViewBag.Genre",
                                    search: "@ViewBag.search",
                                    autoplay: "true"
                                };
                                </text>
                            }
                            break;
                        
                            //--------------------------------------------
                            case "song":
                            {
                                <text>
                                var vars = {
                                    mediaType: "song",
                                    userID: "0",
                                    song_id: "@ViewBag.SongGuid",
                                    song_title: "@ViewBag.SongTitle",
                                    autoplay: "true"
                                };
                                </text>
                            }
                            break;
                            //--------------------------------------------
                            default:
                                break;
                        }
                        

                        var params = {
                            allowFullScreen: "true"
                        };
                        var attributes = {
                            id: "HypsterOriginalPlayer",
                            name: "HypsterOriginalPlayer"
                        };  
                        swfobject.embedSWF("/Scripts/HypsterOriginalPlayer.swf", "HypsterOriginalPlayer", "475", "545", "10.3.0", "/Scripts/expressInstall.swf", vars, params, attributes);
			        </script>
                
                </div>



                <div class="SocialCont">
                    @switch((string)ViewBag.MEDIA_TYPE)
                    {
                        case "playlist":
                        {
                            <text>
                            <!-- AddThis Button BEGIN -->
                            <div id="sharePlugin_cont" class="addthis_toolbox addthis_floating_style addthis_32x32_style" style=" background:#282828;">
                                <a class="addthis_button_preferred_1"></a>
