                            <!-- AddThis Button END -->
                            </text>
                        }
                            break;
                        
                        default:
                        {
                            <text>
                            <!-- AddThis Button BEGIN -->
                            <div id="sharePlugin_cont" class="addthis_toolbox addthis_floating_style addthis_32x32_style" style=" background:#282828;">
                                <a class="addthis_button_preferred_1"></a>
                                <a class="addthis_button_preferred_2"></a>
                                <a class="addthis_button_preferred_3"></a>
                                <a class="addthis_button_preferred_4"></a>
                                <a class="addthis_button_compact"></a>
                            </div>
                            <script type="text/javascript" src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=xa-5092fa6e25d2c0c8"></script>
                            <!-- AddThis Button END -->
                            </text>
                        }
                            break;
                    }
                </div>
            
            
            </div>





