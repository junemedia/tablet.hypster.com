                    </div>
            </div>



        </div>


    </div>







    <!-- hide back -->
    <div class="Trans_BACK" id="HideBackDiv" onclick="Show_Content();"></div>
    <div id="popupContainer"></div>
    <!-- hide back -->


    <script type="text/javascript">
        var song_title = "";
        var song_guid = "";
    
        //external interface
        function SongChanged(params) {
            var song_details = params.split("|");
            song_title = song_details[0];
            song_guid = song_details[1];

            if (params == "") {
                $("#AddBtn").css("display", "none");
            } else {
                $("#AddBtn").css("display", "block");
            }
        
        }

        function AddSong_CLICK() {
            $("#MainContHolder").css("display","none");
            ShowAddToMyPlaylistPopup("?song_guid=" + song_guid + "&song_title=" + song_title);
        }
    </script>









