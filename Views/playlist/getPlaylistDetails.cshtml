@model List<hypster_tv_DAL.PlaylistData_Song>
@{
    Layout = null;
}





<div style=" float:left; width:100%; text-align:left; color:#FCF088; font-size:17px;">
    @ViewBag.Playlist_Name
</div>


@foreach (var item in Model)
{                  
    <div style=" float:left; width:100%; text-align:left;">

        <div onclick="OpenPlayer('song_guid=@item.YoutubeId&song_title=@HttpUtility.UrlEncode(item.Title)');" style=" float:left; width:99%; height:25px; line-height:25px; overflow:hidden; background-color:#454545; margin-left:1%; margin-top:3px; border-radius:2px; cursor:pointer; ">
            <text>&nbsp;</text>@item.Title
        </div>
    </div>
}



@if (Model.Count == 0)
{
    <div style="float:left; width:98%; height:23px; line-height:23px; overflow:hidden; margin:0px 4px 3px 4px; padding-left:3px; background-color:#454545; border-radius:2px; text-align:left; cursor:pointer; ">
        No songs in this playlist
    </div>
}
