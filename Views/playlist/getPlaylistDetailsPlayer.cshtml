@model List<hypster_tv_DAL.PlaylistData_Song>
@{
    Layout = null;
}





@for (int i = 0; i < Model.Count; i++)
{
    <div id="PlItem_@i" class="playlistItemC" onclick="plVClick('@Model[i].YoutubeId', @i)" id="song_@Model[i].playlist_track_id" style=" float:left; width:98%; height:44px; overflow:hidden; background-color:#292929; margin:0 0 2px 2px;" >
                    
        <img alt="" src="http://i.ytimg.com/vi/@Model[i].YoutubeId/0.jpg" style="float:left; width:50px; height:37px; margin:4px 0 0 4px; border-radius:3px; cursor:pointer;" />

        <div style="float:left; width:290px; height:28px; line-height:28px; overflow:hidden; margin-left:10px; margin-top:4px; cursor:pointer; font-size:16px; color:#DEDEDE;">
            @Model[i].Title
        </div>
                        
    </div>
}

@if (Model.Count == 0)
{
    <div style="float:left; width:98%; height:23px; line-height:23px; overflow:hidden; margin:0px 4px 3px 4px; padding-left:3px; background-color:#454545; border-radius:2px; text-align:left; cursor:pointer; ">
        No songs in this playlist
    </div>
}





<script>

var items_arr = new Array();
@for (int i = 0; i < Model.Count; i++)
{
    <text>items_arr[@i] = '@Model[i].YoutubeId';</text>
}

if(items_arr.length > 1)
{
    $("#Prev_btn").css("display","block");
    $("#Next_btn").css("display","block");
    $("#Shuffle_btn").css("display","block");
}
else
{
    $("#Prev_btn").css("display","none");
    $("#Next_btn").css("display","none");
    $("#Shuffle_btn").css("display","none");
}



CURR_VIDEO = -1;

PlayNextVideo();

</script>  


